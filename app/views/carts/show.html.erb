<h1>Your Cart Items</h1>
<div class="row">
	<% @cart.products.order(updated_at: :desc).uniq.each do |product| %>
	  <div class="col-md-3">
	    <div class="card">
	      <%= image_tag product.image, width: '100', height: '150' %>
	      <div class="card-body">
	        <div class="card-title">
	          <div class="card-text-centre">
	            <%= product.title.truncate(25) %><br>
	            <%= product.price %><br>
	            <%= product.description.truncate(25) %>
	            <%= check_box_tag 'ids[]', product.id %> add to cart
	          </div>         
	        </div>
	      </div>
	    </div>
	  </div>
	<%end%>
</div>
<%= link_to 'Product list', products_path, class: 'btn btn-primary' %>